@using UCITMS


<div class="user-info">
    @* <img src="@Url.Content($"~/uploads/logos/{Model.LogoFileName}")" alt="User Logo" class="user-logo" /> *@
    <a href="javascript:void(0);" class="user-name" onclick="showUserPopup('@(Convert.ToString(UserSession.GetUserName(Context)))', '@(Convert.ToString(UserSession.GetUserEmail(Context)))')">@UserSession.GetUserName(Context)</a>
</div>

<!-- Hidden popup for user details -->
<div id="user-popup" style="display: none; position: absolute; background-color: #f1f1f1; border: 1px solid #ccc; padding: 10px;">
    <p id="popup-name"></p>
    <p id="popup-email"></p>
</div>

<script>
    function showUserPopup(fullName, email) {
        document.getElementById('popup-name').innerText = 'Full Name: ' + fullName;
        document.getElementById('popup-email').innerText = 'Email: ' + email;

        var popup = document.getElementById('user-popup');
        popup.style.display = 'block';
    }

    // Hide the popup when clicking anywhere outside
    window.onclick = function(event) {
        var popup = document.getElementById('user-popup');
        if (event.target !== popup) {
            popup.style.display = 'none';
        }
    }
</script>
